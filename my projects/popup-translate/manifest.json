{
    "manifest_version": 2,
    "name": "select to translate",
    "description": "just select text on a website to translate it :) .",
    "version": "1.0",
    "author": "Leon Orlinski",
    "content_security_policy": "script-src 'self'  'sha256-LQMiDpXxmXsGYQbVdK0lLckM9WyR2ENUBknYi1Ra6QI=' 'unsafe-eval'; object-src 'self'",

    "content_scripts": [{
        "js": ["vue.js","translate.js","popup.js"],
        "matches": ["http://*/*", "https://*/*"]
      }],




"browser_action": {
    "default_icon": "tab-icon.png",
    "default_popup": "select-translate.html",
    "default_title": "Have a good day"
},

"permissions": ["tabs","contextMenus","activeTab","storage"],
"background": {
    "scripts": ["translate.js"],
    "persistent": false
  }

}